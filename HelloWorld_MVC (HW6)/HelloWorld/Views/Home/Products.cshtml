@model HelloWorld.Models.Product[]

@{
    ViewBag.Title = "Products";
}

@if (Model != null && Model.Length > 0)
{
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Count</th>
            </tr>
        </thead>
        @foreach (HelloWorld.Models.Product product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>
                    @switch (product.ProductCount)
                    {
                        case 0:
                            <span>Out of Stock</span>;
                            break;
                        case 1:
                            <span>Low Stock</span>;
                            break;

                        default:
                            @String.Format("{0:#.#} in stock", product.ProductCount);
                            break;
                    }
                </td>
            </tr>
        }
    </table>
}
else
{
    <h2>No product data found.</h2>
}
